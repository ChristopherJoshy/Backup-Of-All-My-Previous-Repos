# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=evotaion

# Redis Cloud Configuration (for matchmaking queue)
# Option 1: Full Redis URL (recommended)
REDIS_URL=redis://default:password@redis-12345.c123.us-east-1-2.ec2.cloud.redislabs.com:12345

# Option 2: Individual parameters (if REDIS_URL is not set)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_USERNAME=default

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_SERVICE_ACCOUNT_PRIVATE_KEY_ID=key-id-here
FIREBASE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Game Configuration
MATCH_DURATION_SECONDS=30
MATCHMAKING_TIMEOUT_SECONDS=20
BOT_MIN_WPM=40
BOT_MAX_WPM=120

# Anti-Cheat Configuration
MIN_KEYSTROKE_LATENCY_MS=20
MAX_WPM_THRESHOLD=250
KEYSTROKE_VARIANCE_THRESHOLD=0.1

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com
