# ORIX Backend Configuration Template
# Copy this file to .env and fill in your values.
# DO NOT commit your actual .env file to version control.

# =============================================================================
# Firebase Configuration
# =============================================================================
FIREBASE_PROJECT_ID=orix-app-prod

# Service Account:
# OPTION 1 (Recommended): Minified JSON string on a single line
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
#
# OPTION 2: Path to the JSON file
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-credentials.json

# =============================================================================
# Security & Auth
# =============================================================================
# Comma-separated list of allowed college email domains
ALLOWED_COLLEGE_DOMAINS=sjcetpalai.ac.in,cs.sjcetpalai.ac.in

# Secret key for JWT token generation (use a long random string)
JWT_SECRET=replace_with_secure_random_string_min_32_chars

# Secret header value for accessing /admin endpoints
# Header: X-Admin-Secret
ADMIN_API_SECRET=replace_with_secure_admin_secret

# =============================================================================
# Database
# =============================================================================
# MongoDB Connection String (SRV format recommended)
MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DATABASE=orix

# Redis Connection String
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Telegram Bot
# =============================================================================
# Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Webhook URL for production (required for hosted environments like Render)
# Set this to your production backend URL (e.g., https://orix-app.onrender.com)
# Leave unset/empty for local development (uses polling mode instead)
TELEGRAM_WEBHOOK_URL=

# Comma-separated list of Telegram User IDs for admins
TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321

# Chat ID for logging system events
TELEGRAM_LOG_CHAT_ID=-1001234567890

# Optional: Restrict bot commands to a specific group
TELEGRAM_ALLOWED_GROUP_ID=-1001234567890

# Passphrase for promoting users to admin via the bot
TELEGRAM_SECRET_ADMIN_PASSPHRASE=very_long_secret_phrase_for_emergency_access

# Head Admin ID (Full privileges)
TELEGRAM_HEAD_ADMIN_ID=1844964834

# =============================================================================
# Application Settings
# =============================================================================
# Base URL of the backend API
API_BASE_URL=http://localhost:8000

# CORS Origins (Comma-separated or *)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# Debug Mode (True/False)
DEBUG=True

# Rate Limits (Optional, defaults shown)
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_AUTH_per_MINUTE=120
